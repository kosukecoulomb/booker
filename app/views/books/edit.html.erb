<% if @book.errors.any? %>
  <span class = "error"><%= @book.errors.count %>errors prohibited this book from being saved:</span>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>Editing Book</h2>
<%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
<% end %>

<%= link_to "Show",book_path(@book.id) %>
<span>|</span>
<%= link_to "Back",'/books' %>
