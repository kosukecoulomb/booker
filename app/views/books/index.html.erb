<div class = index_flash>
<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>
</div>

<div class = "book_index">
  <h1>Books</h1>

<table>
<tr>
  <th>Title</th><th>Body</th><th></th><th></th><th></th>
</tr>

<tr>
  <td>
    <div class = "book_title">
    <% @books.each do |book| %>
    <span><%= book.title %></span>
    <% end %>
    </div>
  </td>

  <td>
    <div class = "book_body">
    <% @books.each do |book| %>
    <span><%= book.body %></span>
    <% end %>
    </div>
  </td>

 <td>
   <div class = "book_link">
    <% @books.each do |book| %>
    <%= link_to "Show",book_path(book.id) %>
    <% end %>
   </div>
 </td>

 <td>
   <div class = "book_link">
    <% @books.each do |book| %>
    <%= link_to "Edit",edit_book_path(book.id) %>
    <% end %>
   </div>
 </td>

 <td>
   <div class = "book_link">
    <% @books.each do |book| %>
    <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
    <% end %>
   </div>
 </td>
</tr>
</table>
</div>

<div class = "create_book">
<h2>New book</h2>

<% if @book.errors.any? %>
  <span class = "error"><%= @book.errors.count %>errors prohibited this book from being saved:</span>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
</div>